generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id Int @id @default(autoincrement())
  fname String
  lname String
  email String @unique
  password String
  user_profile String
  role Role @relation(fields: [role_id],references: [id])
  role_id Int  @default(2)
  active Boolean @default(true)
  transaction Transaction[]
}

model Role {
  id Int @id @default(autoincrement())
  role_name String
  user Users[]
}

model Game {
  id Int @id @default(autoincrement())
  game_name String
  game_profile String
  status Status @relation(fields: [status_id],references: [id])
  status_id Int @default(1)
  description String
  package Package[]
  active Boolean @default(true)
  transaction Transaction[]
}

model Status{
  id Int @id @default(autoincrement())
  status_name String
  game Game[]
  transaction Transaction[]
}


model Package {
  id Int @id @default(autoincrement())
  package_name String
  numpack Int
  price Float
  package_profile String
  game Game @relation(fields: [game_id],references: [id])
  game_id Int
  active Boolean @default(true)
  transaction Transaction[]
}


model PaymentMethod{
  id Int @id @default(autoincrement())
  payment_name String
  code String
  codePayment String
  bankName String?
  payment_profile String
  active Boolean @default(true)
  transaction Transaction[]
}

model Transaction{
  id Int @id @default(autoincrement())
  user Users @relation(fields: [user_id],references: [id])
  user_id Int
  game Game @relation(fields: [game_id],references: [id])
  game_id Int
  package Package @relation(fields: [package_id],references: [id])
  package_id Int
  price Float
  UID String
  paymentMethod PaymentMethod @relation(fields: [payment_id],references: [id])
  payment_id Int
  status Status @relation(fields: [status_id],references: [id])
  status_id Int @default(3)
}



